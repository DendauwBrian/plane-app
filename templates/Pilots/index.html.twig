{% extends "base.html.twig" %}

{% block body %}
    <h1 class="h1">Pilots</h1>
    <hr/>
    <div>
        <a href="/create-pilot">Create a new Pilot</a> | <a href="/edit-pilot">Edit an existing Pilot</a> | <a
                href="/retire-pilot">Retire an active Pilot</a>
    </div>
    <hr/>

    <h2>Current active Pilots</h2>
    {% if pilots %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Rank</th>
                <th>Details</th>
            </tr>
            </thead>
            <tbody>
            {% for pilot in pilots %}
                <tr>
                    <td>{{ pilot.firstname }}</td>
                    <td>{{ pilot.lastname }}</td>
                    <td>{{ pilot.rank }}</td>
                    <td><a href="/pilot/{{ pilot.id }}" class="btn btn-dark">Show</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>There are no active pilots.</p>
    {% endif %}
{% endblock %}