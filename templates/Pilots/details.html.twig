{% extends "base.html.twig" %}

{% block body %}
    <div class="card mb-3">
        <h3 class="card-header">{{ pilot.rank }} {{ pilot.lastname }}</h3>
        <div class="card-body">
            <h5 class="card-title">{{ pilot.rank }}</h5>
            <h6 class="card-subtitle text-muted">{{ pilot.firstname }} {{ pilot.lastname }}</h6>
        </div>
        <div class="card-body">
            <p class="card-text">{{ pilot.age }} years old.</p>
            <p class="card-text">Retired: {% if  pilot.retired %} Yes{% else %} No{% endif %}.</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Has {{ timesFlown }} recorded flights.</li>
        </ul>
        <div class="card-body">
            <a href="/pilot/edit/{{ pilot.id }}" class="card-link">Edit</a>
        </div>
        <div class="card-footer text-muted">
            Last flight was with the {{ plane.model }}
        </div>
    </div>
{% endblock %}