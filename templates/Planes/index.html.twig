{% extends "base.html.twig" %}

{% block body %}
    <h1>Planes</h1>
    <hr/>
    <div>
        <a href="/plane/new">Create a new Plane</a>
    </div>
    <hr/>

    <h2>Current active Planes</h2>
    {% if planes %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Model</th>
                <th>Manufacturer</th>
                <th>Status</th>
                <th>Details</th>
            </tr>
            </thead>
            <tbody>
            {% for plane in planes %}
                <tr>
                    <td>{{ plane.model }}</td>
                    <td>{{ plane.manufacturer }}</td>
                    <td>{%  if plane.decommissioned %} Decommisioned {% else %} Available {% endif %}</td>
                    <td><a href="/plane/{{ plane.id }}" class="btn btn-dark">Show</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>There are no planes available. Try <a href="/create-plane">making a new one</a>.</p>
    {% endif %}
{% endblock %}