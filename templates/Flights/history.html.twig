{% extends 'base.html.twig' %}

{% block title %} Flight History {% endblock %}

{% block body %}
    <h1>History</h1>
    {% if flights %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Date</th>
                <th>Details</th>
            </tr>
            </thead>
            <tbody>
            {% for flight in flights %}
                <tr>
                    <td>{{ flight.flightts|date('Y-m-d H:i:s')  }}</td>
                    <td><a href="{{ url('flightdetails', {'id': flight.id} ) }}" class="btn btn-dark">Show</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>There are no flights on record.</p>
    {% endif %}
{% endblock %}